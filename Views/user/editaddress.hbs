<body style="background-color: rgb(164, 177, 189);;">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <form action="/edited-address-update?id={{address._id}}" method="post" class="form-horizontal" role="form">
                    <h2 class="mt-4">EDIT ADDRESS</h2>
                    <br>
                    <div class="form-group ">
                        <label for="inputAddressLine2" class="col-sm-2 control-label">Address</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputAddressLine2" name="address"
                                placeholder="Address" value="{{address.address}}">
                            <div class="form-outline">
                                {{!-- <textarea class="form-control" id="textAreaExample" rows="2"
                                    placeholder="Address"></textarea> --}}
                                <label class="form-label" for="textAreaExample"></label>
                            </div>
                        </div>
                    </div>

    
                    {{#if address.default}}
                    {{else}}
                    <select class="form-select mb-3" aria-label="Default select example" style="width: 83.4%;" name="default">
                        <option  value="true">Default Address</option>
                        <option value="false">Secondary Address</option>
                    </select>
                    {{/if}}

                    <div class="form-group mb-3">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputCityTown" name="city"
                                placeholder="City / Town" value="{{address.place}}">
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="inputStateProvinceRegion" name="state"
                                placeholder="State" value="{{address.state}}">
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="col-sm-10">
                            <input type="number" class="form-control" id="inputZipPostalCode" name="postalcode"
                                placeholder="Zip / Postal Code" value="{{address.pincode}}">
                        </div>
                    </div>
                    {{!--
                    <div>
                        <input type="radio" name="hi" value="1">
                        <input type="radio" name="hi" value="2">
                    </div>
                    --}}

                    <div style='display:flex;'>
                        <input type='submit' class="btn btn-primary mt-3" style="margin-left: 28rem;" value="Update">
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>