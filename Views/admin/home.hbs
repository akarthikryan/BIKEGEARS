    <script>
        graph()
        async function graph() {
            const data = await fetch('/admin/admin-home-data', {
                method: 'GET',
                headers: {
                    'Content-type': 'application/json'
                },
            })
            const { counts, categories, paymentCount, dateArray, weeklySales } = await data.json()

            showgraph(counts, categories)
            payment(paymentCount)
            sales(dateArray, weeklySales)
        }

        function showgraph(counts, categories) {

            const xValues = categories
            const yValues = counts
            const barColors = [
                "#b91d47",
                "#00aba9",
                "#2b5797",
                "#e8c3b9",
                "#1e7145",
            ];
            new Chart("myChart", {
                type: "pie",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: "Category"
                    }
                }
            });
        }



        function payment(paymentCount) {
            var xValues = ["COD", "RAZOR"];
            var yValues = paymentCount
            var barColors = [

                "#1e7145",
                "#7d2eab",
                "e8c3b9",
                "#b91d47",
                "#00aba9",
                "#2b5797"

            ];

            new Chart("payment", {
                type: "doughnut",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: "Payment Method"
                    }
                }
            });
        }

        function sales(dateArray, weeklySales) {
            var xValues = dateArray
            var yValues = weeklySales
            var barColors = [
                "#ab832e",
            ];

            new Chart("sales", {
                type: "line",
                data: {
                    labels: xValues,
                    datasets: [{
                        backgroundColor: barColors,
                        data: yValues
                    }]
                },
                options: {
                    title: {
                        display: true,
                        text: "Payment Method"
                    }
                }
            });
        }


    </script>


