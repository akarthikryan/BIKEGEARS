    <script>

    
        let rNormal = document.getElementById('normal')
        let rScheduled = document.getElementById('scheduled')
    
        let normal = document.getElementById('normal-table')
        let scheduled = document.getElementById('scheduled-table')

        let rpNormal = document.getElementById('pnormal')
        let rpScheduled = document.getElementById('pscheduled')

        let pNormal = document.getElementById('pnormal-table')
        let pScheduled = document.getElementById('pscheduled-table')


        rNormal.addEventListener('change', () => {
            normal.style.display = 'block'
            scheduled.style.display = 'none'
            pNormal.style.display = 'none'
            pScheduled.style.display = 'none'
        })
        rScheduled.addEventListener('change', () => {
            scheduled.style.display = 'block'
            normal.style.display = 'none'
            pNormal.style.display = 'none'
            pScheduled.style.display = 'none'
        })

    
        rpNormal.addEventListener('change', () => {
            scheduled.style.display = 'none'
            normal.style.display = 'none'
            pNormal.style.display = 'block'
            pScheduled.style.display = 'none'
        })
        rpScheduled.addEventListener('change', () => {
            scheduled.style.display = 'none'
            normal.style.display = 'none'
            pNormal.style.display = 'none'
            pScheduled.style.display = 'block'
        })
