    </div>
    <!-- Spinner End -->


    <!-- Topbar Start -->
    
    <!-- Topbar End -->


    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top px-4 px-lg-5">
        <a href="/" class="navbar-brand d-flex align-items-center">
            <h1 class="m-0">Bike Accessories Sales</h1>
        </a>
        <button type="button" class="navbar-toggler me-0" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href="/" class="nav-item nav-link ">Home</a>
                <a href="/about" class="nav-item nav-link">About</a>
                <a href="/products" class="nav-item nav-link active">Products</a>
                {{#if isLogin}}
                <form action="/logout" class="nav-item nav-link text-danger" method="post">
                    <input value="Logout" type="submit" style="border: 0ch;color:red;background-color:white;">
                </form>
                {{else }}
                <a href="/login" class="nav-item nav-link">Login / Sign up</a>
                {{/if}}
                <a href="/cart" class="nav-item nav-link"><i class="fa fa-shopping-cart"></i></a>
                {{#if isLogin}}
                <a href="/profile" class="nav-item nav-link"><i class="fa fa-user-circle"></i></a>
                {{/if}}
            </div>
        </div>
    </nav>
    <!-- Navbar End -->


    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5 mb-5 wow fadeIn" data-wow-delay="0.1s">
        <div class="container text-center py-5">
            <h1 class="display-3 text-white mb-4 animated slideInDown">Products</h1>
            <nav aria-label="breadcrumb animated slideInDown">
                <ol class="breadcrumb justify-content-center mb-0">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    {{!-- <li class="breadcrumb-item"><a href="#">Pages</a></li> --}}
                    <li class="breadcrumb-item active" aria-current="page">Products</li>
                </ol>
            </nav>
                     <div>
                {{!--Category dropdown--}}
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2"
                        data-bs-toggle="dropdown" aria-expanded="false">
                        Category
                    </button>

                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
                        {{#each categoryArray}}
                        <li><a class="dropdown-item active"
                                href="/product/category?id={{this.category}}">{{this.category}}</a></li>
                        {{/each}}
                    </ul>

                </div>
                {{!--Category dropdown--}}

                {{!-- Search part --}}
                <div class="cs">
                    <form action='/product/search' method="post" class="py-3">
                        <div style="display: flex;">
                            <input  name="search" type="text" id="search"
                                class="form-control csk" />&nbsp;&nbsp;
                            <label class="form-label" for="search"></label>
                            <input type="submit" value="Search" class="btn btn-primary btn-md align-items-center">
                        </div>
                    </form>
                </div>


        </div>
    </div>
    <!-- Page Header End -->




    <!-- Product Start -->


    <div class="container-xxl pt-5">
        <div class="container">
          

            
                {{!-- search part ends --}}

            </div>

            {{!-- First Row --}}
            {{!-- Second Row --}}
            {{!-- Third Row --}}
            {{!-- Fourth Row --}}

            <div class="container">

                <div class="row gx-4">

                    {{!-- product start --}}
                    {{#each productArray}}
                    <div class="col-md-6 col-lg-4 col-xl-3 wow fadeInUp pt-5" data-wow-delay="0.1s">
                        <div class="product-item">
                            <div class="position-relative">
                                <img class="img-fluid" src="../../Public/img/uploaded-images/{{this.image}}" alt="">
                                <div class="product-overlay">
                                    {{#if this.inCart}}
                                    <a href="/cart" class="text-info" style="font-family: sans-serif;">Go to cart</a>
                                    <a class="btn btn-square btn-secondary rounded-circle m-1" href="/cart">
                                        <i class="bi bi-cart"></i></a>
                                    {{else if this.quantity}}
                                    <a class="btn btn-square btn-secondary rounded-circle m-1"
                                        href="/addto-cart?id={{this._id}}">
                                        <i class="bi bi-cart"></i></a>
                                    {{else }}
                                    <h5 class="text-danger" style="font-family: sans-serif;">Out of stock</h5>
                                    {{/if}}
                                </div>
                            </div>
                            <div class="text-center p-4">
                                <a class="d-block h5" href="/product-page?id={{this._id}}">{{this.name}}</a>
                                <p>{{this.unit}}</p>
                                <span class="text-primary me-1">â‚¹{{this.rate}}</span>
                                {{!-- <span class="text-decoration-line-through">$15.00</span> --}}
                            </div>
                        </div>
                    </div>
                    {{/each}}

                    {{!-- product end--}}
                </div>

            </div>


            <!-- Product End -->


            <!-- Features Start -->
            
            <!-- Features End -->









