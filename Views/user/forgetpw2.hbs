        <div style="height: 75vh ; background-color: linear-gradient(to left, #ffffff 0%, #ffffff 100%; width :50vw"
            class=" d-flex align-items-center justify-content-center mt-5 p-5">
            <div class="container-fluid cust-inputbox  w-50   " id="asd">


                <form action="/reset-password" method="post">
                    <center>
                        <p style="color:rgb(11, 11, 118) ;" class="text-center ">OTP is send your mail</p>
                    </center>
                    <div class="form-floating mb-3 ">
                        <input type="text" id="otp" name="otp" class="form-control" class="floatingInput"
